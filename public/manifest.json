{
  "manifest_version": 3,
  "name": "Y Dictionary",
  "description" : "A chrome extension to look up word(s) with dictionary-api",
  "version": "1.0.1",
  "minimum_chrome_version": "88",
  "action": {
    "default_icon" : "logo128.png",
    "default_title": "Y Dictionary"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["static/js/main.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "logo16.png",
        "logo48.png",
        "logo128.png"
      ],
      "matches": ["https://*/*"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Y Dictionary",
  "description" : "A Chrome extension to look vocabularies up with y-dictionary-server",
  "version": "1.0.0",
  "action": {
    "default_icon" : "logo128.png",
    "default_title": "Y Dictionary"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/main.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "contextMenus",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "logo16.png",
        "logo48.png",
        "logo128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
